{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier", "jest", "graphql", "react"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": 0,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
